<job id="twrBatchjob" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">

    <step id="bepaalMaand" next="verwerkMedewerkerTwr" allow-start-if-complete="true">
        <batchlet ref="bepaalMaandBatchlet"></batchlet>
    </step>

    <step id="verwerkMedewerkerTwr">
        <chunk item-count="20">
            <reader ref="medewerkerTwrItemReader"></reader>
            <processor ref="medewerkerTwrItemProcessor"></processor>
            <writer ref="medewerkerTwrItemWriter"></writer>
        </chunk>
    </step>

</job>